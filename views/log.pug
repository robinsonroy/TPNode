doctype
html(lang="en")
  head
    include head.pug
    script(src="https://cdn.socket.io/socket.io-1.4.5.js")
    title "Logging"

  body
    h1 Logging
    #log

    script
      :coffee-script
        socket = io.connect 'http://localhost:1337'
        socket.on 'log', (data) ->
          $("#log").append "<p>#{data.username} is accessing #{data.url}</p>"
          console.log "message recu"
