@import 'nib'
global-reset()

main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

.highlight
  padding: 9px 14px
  margin-bottom: 14px
  background-color: #f7f7f9
  border: 1px solid #e1e1e8
  border-radius: 4px

.area
  fill: steelblue

.axis line
  fill: none
  stroke: #000
  shape-rendering: crispEdges

svg
  margin: 50px 0 50px 0

#metric-add-form
  text-align: center
  margin-top: 15px
